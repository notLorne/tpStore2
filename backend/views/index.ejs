<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }
    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 400px;
    }
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }
    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
    .product-image {
        width: 200px;
        height: 200px;
    }
    
    .product-list-card {
        background-color: #c3fc3f;
        border: 1px solid #4d2200;
        padding: 10px;
    }
    .centered-elements {
        
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .centered-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .button-style {
        padding: 10px 20px;
        background-color: #eaeaea;
        font-family: Arial, sans-serif;
        font-size: 32px;
        color: #333;
    }
    .little-button-style
    {
        padding: 2px 4px;
        background-color: #eaeaea;
        font-family: Arial, sans-serif;
        font-size: 12px;
        color: #333;
    }
    body {
        background-color: #28d6a2;
    }
    h1 {
        text-align: center;
        font-family: 'Roboto', sans-serif;
        font-size: 72px;
        animation: colorChange 5s infinite;
    }
    @keyframes colorChange {
        0% {
            color: red;
        }
        50% {
            color: rgb(0, 4, 255);
        }
        100% {
            color: rgb(255, 0, 0);
        }
    }
    h2 {
       
        text-align: center;
        font-family: 'Roboto', sans-serif;
        font-size: 24px;
        animation: colorChange 5s infinite;
    }
</style>

<body>

<div class="centered-elements">
    <img src="/assets/blingCover.jpg" alt="Bling Cover Image" style="width: 1150px; height: 400px;">
</div>

<div id="loginStatus" class="centered-elements">
    <% if (isLoggedIn) { %>
      Connected as <%= userEmail %>
    <% } else { %>
      Not logged in
    <% } %>
  </div>
  
<br>

<div class="centered-buttons">
    <% if (isLoggedIn) { %>
      <button id="historyButton" class="button-style">Historique</button>
    <% } else { %>
      <button id="loginButton" class="button-style">Se connecter</button>
    <% } %>
    <button id="signupButton" class="button-style">S'inscrire</button>
    <button id="cartButton" class="button-style">Panier</button>
  </div>
  

    <!-- Modal Inscription -->
    <div id="signupModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>

        <h2>Inscription</h2>
        <form action="/subscribe" method="post">
            <label for="prenom">Prénom:</label>
            <input type="text" id="prenom" name="prenom" required><br><br>
          
            <label for="nom">Nom:</label>
            <input type="text" id="nom" name="nom" required><br><br>
          
            <label for="courriel">Courriel:</label>
            <input type="email" id="courriel" name="courriel" required><br><br>
          
            <label for="password">Mot de passe:</label>
            <input type="password" id="password" name="password" required><br><br>
          
            <input type="submit" value="S'inscrire">
          </form>          
    </div>
    </div>

    <!-- Modal Se connecter -->
    <div id="loginModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>

        <h2>Connexion</h2>
        <form action="/login" method="post">
            <div>
              <label for="email">Adresse courriel :</label>
              <input type="email" id="email" name="email" required>
            </div>
            <div>
              <label for="password">Mot de passe :</label>
              <input type="password" id="password" name="password" autocomplete="on" required>
            </div>
            <div>
              <input type="submit" value="Connexion">
            </div>
          </form>
          
    </div>
    </div>

    <!-- Modal Panier d'achat -->
    <div id="cartModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>

        <h2>Shopping Cart</h2>
        <button id="emptyCartBoutton" class="little-button-style">Vider panier</button>       

        <% var total = 0.0 %>
        <% if (cart && cart.length > 0) { %>
        <ul>
            <% cart.forEach(function(item) { %>
            <% total += item.price * item.quantity %>
            <li>
 				<strong>Produit ID:</strong> <%= item.id_produit %>
                <br>
                <strong>Quantité:</strong> <%= item.quantity %>
                <br>
                <strong>Prix:</strong> <%= item.price %>
            </li>
            <% }) %>
        </ul>
        <% } else { %>
        <p>Your cart is empty.</p>
        <% } %>

        <!-- Paypal section 
             For development purpose use paypal account: user="sb-fyyzh26379554@personal.example.com" password="paypal123" for approval TO REMOVE -->
        <script src="https://www.paypal.com/sdk/js?client-id=ARPofou01ye9ITplB8G5bhwHFmmh-ltmsK9nFXQccx2-RaYllLEEnQC4exqwJZInh-h7p0YGF9GXaVhy"></script>
        <script>
            paypal
                .Buttons({
                    style: { layout: 'horizontal', color:  'gold', shape:  'rect', label:  'pay' },
                    onInit: function(data, actions) {
                        if (document.getElementById("amount").value <= 0) {
                            actions.disable();
                        }          
                    },
                    createOrder: function (data, actions) {
                        return actions.order.create({ purchase_units: [ { amount: { value: document.getElementById("amount").value } } ] })
                    },
                    onApprove: function (data, actions) {
                        return actions.order.capture().then( function (details) {
                            console.log("Transaction complétée par " + details.payer.name.given_name);
                            updateDB();

                        });
                    },
                })
                .render('#paypal');
            
            async function updateDB() {
                try {
                    var response = await fetch('/order', {
                        method: 'POST'
                    });

                    if (response.ok) {
                        alert("Commande sauvegardés dans la BD avec succès!");
                        emptyCart();
                    } else {
                        if (response.status == 401) {
                            alert("S'il vous plaît vous enregistré");
                            return;
                        }
                        alert('Problème de sauvegarde de la commande dans la BD');
                    }
                } catch (error) {
                        console.error('Error:', error);
                }
            }

            async function emptyCart() {
                try {
                    var response = await fetch('/cart', {
                        method: 'DELETE',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify({ destroy: "all" })
                    });

                    if (response.ok) {
                        alert("Panier vider avec succes!");
                    } else {
                        alert('Problème pour vider le panier');
                    }
                } catch (error) {
                        console.error('Error:', error);
                } finally {
                    window.location.reload();
                }
            }

            emptyCartBoutton.addEventListener('click', async function(event) {
                emptyCart();
            });
        </script>
        <br> 
        <table>
            <tr>
                <td>Total: </td>
                <td><input type="number" id="amount" value="<%= total %>" style="width: 80px;" onKeyDown="return false"></td>
            </tr>
            <tr>
                <td><div id="paypal" style="max-width:55px;"></div></td>
            </tr>
        </table>
        <br>
    </div>
    </div>

    <!-- Modal produits achetés -->
    <div id="historyModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>

        <h2>Tous les produits achetés par le client <span><%= userEmail %></span></h2>

        <script>                                    
            async function getHistorique() {
                try {
                    var response = await fetch('/historique', {
                        method: 'GET'
                    });

                    if (response.ok) {
                        alert("Historique reçu");
                    } else {
                        alert('Historique problématique');
                    }
                } catch (error) {
                        console.error('Error:', error);
                }
            }
        </script>               
    </div>
    </div>
    
    <script defer>
    const signupModal = document.getElementById('signupModal');
    const signupButton = document.getElementById('signupButton');
    const loginModal = document.getElementById('loginModal');
    const loginButton = document.getElementById('loginButton');
    const historyButton = document.getElementById('historyButton');
    const cartModal = document.getElementById('cartModal');
    const cartButton = document.getElementById('cartButton');

    const closeSpans = document.getElementsByClassName('close');

    signupButton.addEventListener('click', () => {
        signupModal.style.display = 'block';
    });
    if (loginButton) {
        loginButton.addEventListener('click', () => {
            loginModal.style.display = 'block';
        });
    }
    cartButton.addEventListener('click', () => {
        cartModal.style.display = 'block';
    });
    for (let i = 0; i < closeSpans.length; i++) {
        closeSpans[i].addEventListener('click', () => {
        const modal = closeSpans[i].closest('.modal');
        modal.style.display = 'none';
        });
    }
    window.addEventListener('click', (event) => {
        if (event.target.classList.contains('modal')) {
        event.target.style.display = 'none';
        }
    });
    if (historyButton) {
        historyButton.addEventListener('click', () => {
            historyModal.style.display = 'block';
        });
    }
    </script>

